<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite" parallel="tests" thread-count="2" data-provider-thread-count="2">

    <test verbose="2" name="Chrome test">
        <parameter name="browser" value="chrome" />
        <classes>
            <class name="opencart.test.NavigationTest">
                <methods>
                    <include name="testOpenBaseURL"/>
                    <include name="testNavigationMenu"/>
                </methods>
            </class>
            <class name="opencart.test.CamerasTest"></class>
        </classes>
    </test>

    <test verbose="2" name="Firefox test">
        <parameter name="browser" value="firefox" />
        <classes>
            <class name="opencart.test.NavigationTest">
                <methods>
                    <include name="testOpenBaseURL"/>
                    <include name="testNavigationMenu"/>
                </methods>
            </class>
            <class name="opencart.test.CamerasTest"></class>
        </classes>
    </test>

</suite>
